@model RailwaySystem.ViewModels.Schedule.CreateVM

@{
    ViewBag.Title = "SetWayStations";
    Layout = "~/Views/Shared/Shared.cshtml";
}

<fieldset>
    <form action="/Schedule/SetWayStations" method="post">
        <div class="row">
            <div class="col-2">
                Station name
            </div>
            <div class="col-2">
                Arrives at
            </div>
            <div class="col-2">
                Departs at
            </div>
        </div>
        @for (int i = 0; i < Model.WayStations.Count; i++)
        {
        <div class="row">
            <div class="col-2">
                @Model.WayStations[i].Station.Name
            </div>
            <div class="col-2">
                @if (i != 0)
                {
                        @Html.TextBoxFor(m => m.Arrivals, new { id = "arrival", @type = "time", @class = "form-control time-picker" })
                }
            </div>
            <div class="col-2">
                @if (i != Model.WayStations.Count - 1)
                {
                        @Html.TextBoxFor(m => m.Departures, new { id = "departure", @type = "time", @class = "form-control time-picker" })
                }
            </div>
        </div>
        }
        <div class="row">
            <div class="col-3">
                <input class="right" type="submit" value="Create" />
            </div>
        </div>
    </form>
</fieldset>

