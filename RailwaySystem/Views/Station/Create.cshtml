@model RailwaySystem.ViewModels.Station.CreateVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Shared.cshtml";
}

<fieldset>

    <div class="container wrapper shadow bg-light mt-3 p-3">
        <h3 class="text-center">Register new station</h3>
    </div>

    <div class="container wrapper card bg-light p-3">
        <form action="/Station/Create" method="post">
            <div class="grid">
                <div class="row mb-2">
                    <div class="col-md-2">
                        <p>@Html.LabelFor(m => m.Name)</p>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-2">
                        <p>@Html.LabelFor(m => m.CityId)</p>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(m => m.CityId,
                        new SelectList((List<City>)ViewData["cities"], "Id", "Name"), "--Select city--", new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.ValidationMessageFor(m => m.CityId)
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-2">
                        <p>@Html.LabelFor(m => m.Latitude)</p>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Latitude, new { @type = "number", @step = ".01", @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.ValidationMessageFor(m => m.Latitude)
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-2">
                        <p>@Html.LabelFor(m => m.Longitude)</p>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Longitude, new { @type = "number", @step = ".01", @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.ValidationMessageFor(m => m.Longitude)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <input class="btn btn-success" type="submit" value="Create" />
                    </div>
                    <div class="col-lg-1">
                        <a href="/Station/Index" type="button" class="btn btn-light p-3">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    
</fieldset>

