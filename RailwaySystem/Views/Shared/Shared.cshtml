@{
    Layout = null;
    User loggedUser = (User)Session["loggedUser"];
    bool loggedAsAdmin = loggedUser?.Id == 1;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<meta name="viewport" content="width=device-width" />

<div class="header">
    <div>
        <h1>RAILWAY SYSTEM</h1>
    </div>
</div>

<fieldset>
    <div>
        <a href="/Home/DownloadResource">Test PDF Download</a>
    </div>
    <div>
        <ul class="nav nav-justified mr-3 float-right">
            @if (loggedAsAdmin)
            {
                <li class="p-3"><a class="btn p-1" href="/Train/Index">Trains</a></li>
                <li class="p-3"><a class="btn p-1" href="/Station/Index">Stations</a></li>
                <li class="p-3"><a class="btn p-1" href="/Track/Index">Tracks</a></li>
                <li class="p-3"><a class="btn p-1" href="/User/Index">Accounts</a></li>
            }
            @if (loggedUser == null)
            {
                <li class="p-3"><a class="btn p-1" href="/Home/Login">Login</a></li>
            }
            else
            {
                <li class="p-3"><a class="btn p-1" href="/Home/Logout">Logout</a></li>
            }
        </ul>
    </div>
</fieldset>

@RenderBody()