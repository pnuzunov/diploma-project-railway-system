@{
    Layout = null;
    User loggedUser = (User)Session["loggedUser"];
    bool isEmployee;
    if (loggedUser == null)
    {
        isEmployee = false;
    }
    else
    {
        isEmployee = new RailwaySystem.Repositories.UsersRepository()
                          .CanAccess(loggedUser.Id, RailwaySystem.Repositories.UsersRepository.Levels.EMPLOYEE_ACCESS);
    }
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<meta name="viewport" content="width=device-width" />

<script id="test-template" type="text/template">
    <div>
        TEMPLATE
    </div>
</script>

<fieldset>
    <div class="bg-image" style="background-image: url('/Content/title-bg-image.jpg'); background-size: cover; background-position: bottom; height: 25vh ">
        <div class="mask" style="background-color: rgba(0, 0, 0, 0.8);">
            <div class="d-flex justify-content-center align-items-center h-100">
                <h1><a class="text-white mb-0" href="/Home/Index">RAILWAY SYSTEM</a></h1>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Home/Index">Home</a>
                    </li>
                    @if (isEmployee)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Station/Index">Stations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Train/Index">Trains</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Track/Index">Tracks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Index">Accounts</a>
                        </li>
                    }
                    @if (loggedUser == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Details?id=@(loggedUser.Id)">My Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

</fieldset>
<body style="background-color: rgb(120 178 220);">
    <div style="min-height:100vh;">
        @RenderBody()
    </div>

    <div class="modal-footer mt-3" style="height: 150px; background-color: rgb(109 109 109);">
        --- FOOTER ---
    </div>

</body>