@model RailwaySystem.ViewModels.Train.EditVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Shared.cshtml";
    string[] TypeNames = RailwaySystem.ViewModels.Train.IndexVM.TypeNames;
}

<fieldset>
    <form action="/Train/Edit" method="post">
        <div class="grid">
            @Html.HiddenFor(m => m.Id)
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Name)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Type)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Type)
                </div>
            </div>
            <div class="row">
                @for (int i = 0; i < TypeNames.Length; i++)
                {
                    <div class="col-2">
                        @Html.RadioButtonFor(m => m.Type, i)
                    </div>

                }
            </div>
            <div class="row">
                @foreach (var str in TypeNames)
                {
                    <div class="col-2">
                        @(str)
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.ValidationMessage("AuthError")
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input class="right" type="submit" value="Save" />
                </div>
            </div>
        </div>
    </form>
</fieldset>
