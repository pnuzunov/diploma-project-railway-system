@model RailwaySystem.ViewModels.Train.EditVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Shared.cshtml";
}

<fieldset>
    <form action="/Train/Edit" method="post">
        <div class="grid">
            @Html.HiddenFor(m => m.Id)
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Name)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.TypeId)
                </div>
                <div class="col-2">
                    @Html.DropDownListFor(m => m.TypeId,
                 new SelectList((List<TrainType>)ViewData["trainTypes"], "Id", "Name"), "-- Select type --")
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.TypeId)
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.ValidationMessage("AuthError")
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input class="right" type="submit" value="Save" />
                </div>
            </div>
        </div>
    </form>
</fieldset>
