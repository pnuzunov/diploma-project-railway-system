@model RailwaySystem.ViewModels.User.DetailsVM
@{
    ViewBag.Title = "AddCredit";
    Layout = "~/Views/Shared/Shared.cshtml";
}
<fieldset>
    <div class="container wrapper shadow bg-light mt-3 p-3">
        <h3 class="text-center">Add credit amount</h3>
    </div>
    <div class="wrapper container shadow card bg-light">
        <form action="/User/AddCredit" method="post">
            @Html.HiddenFor(m => m.Id)
            <div class="row m-3">
                <div class="col-3">
                    @Html.TextBoxFor(m => m.Credit, new { @type = "decimal", @class = "form-control" })
                </div>
            </div>
            <div class="row m-3">
                <div class="col-3">
                    <input class="form-control" type="submit" value="Confirm" />
                </div>
            </div>
        </form>
        <div style="color:red;">
            @Html.ValidationMessage("Error")
        </div>
    </div>
</fieldset>