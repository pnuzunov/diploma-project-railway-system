@model RailwaySystem.ViewModels.User.DetailsVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Shared.cshtml";
}

<fieldset>
    <div class="wrapper container mt-3 bg-light" style="min-height: 50vh">
        <div class="row modal-header p-3">
            <h3 class="m-auto">Account information</h3>
        </div>
        <div class="d-flex justify-content-between">
            <div class="col-sm-2">
                <div class="row m-1">
                    <a href="/User/Details?id=@(Model.Id)">General</a>
                </div>
                <div class="row m-1">
                    <a href="/Ticket/Index">Tickets</a>
                </div>
            </div>
            <div class="border border-1 bg-black" style="width: 1px; min-height:300px;">

            </div>
            <div class="col-lg-10">
                <div class="row m-1">
                    @Html.LabelFor(m => m.Username)
                    <p class="ml-3">@Model.Username</p>
                </div>

                <div class="row m-1">
                    @Html.LabelFor(m => m.FirstName)
                    <p class="ml-3">@Model.FirstName</p>
                </div>

                <div class="row m-1">
                    @Html.LabelFor(m => m.LastName)
                    <p class="ml-3">@Model.LastName</p>
                </div>

                <div class="row m-1">
                    @Html.LabelFor(m => m.Credit)
                    <p class="ml-3">@Model.Credit</p>
                </div>

                <a href="/User/AddCredit?id=@(Model.Id)">Add Credit...</a>
            </div>
        </div>
    </div>
    
</fieldset>




