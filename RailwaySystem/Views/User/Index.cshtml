
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Shared.cshtml";
    User loggedUser = (User)Session["loggedUser"];
    bool canDelete = new RailwaySystem.Repositories.UsersRepository()
        .CanAccess(loggedUser.Id, RailwaySystem.Repositories.UsersRepository.Levels.FULL_ACCESS);
}

<fieldset>
    <div class="grid bold">
        <div class="row">
            <div class="col-1">
                First Name
            </div>
            <div class="col-1">
                Last Name
            </div>
        </div>
    </div>
    <hr />
    <div class="grid">
        @foreach (var item in (List<User>)ViewData["items"])
        {
        <div class="row">
            <div class="col-1">
                @(item.FirstName)
            </div>
            <div class="col-1">
                @(item.LastName)
            </div>
            <div class="col-1">
                <a href="/User/Details?id=@(item.Id)">Details</a>
            </div>
            @if (canDelete)
            {
                <div class="col-1">
                    <a href="/User/Delete?id=@(item.Id)">Delete</a>
                </div>
            }
        </div>
        }
    </div>
</fieldset>

