@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Shared.cshtml";
    User loggedUser = (User)Session["loggedUser"];
    bool canDelete = new RailwaySystem.Repositories.UsersRepository()
        .CanAccess(loggedUser.Id, RailwaySystem.Repositories.UsersRepository.Levels.FULL_ACCESS);
}

@model RailwaySystem.ViewModels.BaseEditVM

<fieldset class="wrapper container">
    <div class="grid">
        <div class="row border border-3 pl-3 pt-3 pb-3 bg-white">
            <div class="col-2">
                User ID
            </div>
        </div>
        <form action="/User/Index" method="post" >
            <div class="row bg-dark">
                <div class="col-3 p-3">
                    @Html.TextBoxFor(m => m.Id)
                </div>
                <div class="col-1 p-2 d-flex">
                    <input class="btn btn-light p-2 mr-2" type="submit" value="Search" />
                    <a href="/User/Index" class="btn btn-light">Clear</a>
                </div>
            </div>
        </form>
        <div class="row bg-white">
            <div class="col-2">
                @Html.ValidationMessage("UserNotFoundError")
            </div>
        </div>
    </div>
</fieldset>


